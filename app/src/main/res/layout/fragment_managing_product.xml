<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    tools:context=".product.ManagingProductFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:text="상품 관리"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/region"
                app:layout_constraintBottom_toBottomOf="@id/region"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="지역"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/region"
                android:layout_width="280dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@id/tv_context_img"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border"
                android:padding="5dp"
                android:hint="지역을 입력해주세요."/>

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/spinner"
                app:layout_constraintBottom_toBottomOf="@id/spinner"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="카테고리"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@id/region"
                app:layout_constraintTop_toBottomOf="@+id/region"/>
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:theme="@style/SpinnerTheme"
                android:background="@drawable/background_spinner_option"
                app:layout_constraintStart_toStartOf="@id/region"
                app:layout_constraintTop_toBottomOf="@+id/region">
            </Spinner>

            <TextView
                android:id="@+id/tv_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/product"
                app:layout_constraintBottom_toBottomOf="@id/product"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="상품명"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/product"
                android:layout_width="280dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@id/region"
                app:layout_constraintTop_toBottomOf="@+id/spinner"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border"
                android:padding="5dp"
                android:hint="상품명을 입력해주세요."/>

            <TextView
                android:id="@+id/tv_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/thumbnail"
                app:layout_constraintBottom_toBottomOf="@id/thumbnail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="썸네일"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/thumbnail"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@id/region"
                app:layout_constraintTop_toBottomOf="@+id/product"
                android:layout_marginTop="8dp"
                android:text="사진첨부"
                android:gravity="center"
                android:background="@drawable/button"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/description"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="상품설명"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/description"
                android:layout_width="280dp"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="@id/region"
                app:layout_constraintTop_toBottomOf="@+id/thumbnail"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:gravity="top"
                android:background="@drawable/border"
                android:padding="5dp"
                android:hint="상품설명을 입력해주세요."/>

            <TextView
                android:id="@+id/tv_context_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/context_img"
                app:layout_constraintBottom_toBottomOf="@id/context_img"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="본문이미지"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/context_img"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@id/description"
                app:layout_constraintTop_toBottomOf="@+id/description"
                android:layout_marginTop="8dp"
                android:text="사진첨부"
                android:gravity="center"
                android:background="@drawable/button"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tv_curriculum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tv_curr1"
                app:layout_constraintBottom_toBottomOf="@id/tv_curr1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="커리큘럼"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/tv_curr1"
                android:layout_width="190dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@id/context_img"
                app:layout_constraintTop_toBottomOf="@+id/context_img"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/curr1_img"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="@id/product"
                app:layout_constraintTop_toBottomOf="@+id/context_img"
                android:layout_marginTop="8dp"
                android:text="사진첨부"
                android:gravity="center"
                android:background="@drawable/button"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/curr1_description"
                android:layout_width="280dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="@id/region"
                app:layout_constraintTop_toBottomOf="@+id/tv_curr1"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border"
                android:padding="5dp"
                android:gravity="top"
                android:hint="1단계 상세설명을 입력해주세요."/>

            <EditText
                android:id="@+id/tv_curr2"
                android:layout_width="190dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@id/context_img"
                app:layout_constraintTop_toBottomOf="@+id/curr1_description"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/curr2_img"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="@id/product"
                app:layout_constraintTop_toBottomOf="@+id/curr1_description"
                android:layout_marginTop="8dp"
                android:text="사진첨부"
                android:gravity="center"
                android:background="@drawable/button"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/curr2_description"
                android:layout_width="280dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="@id/region"
                app:layout_constraintTop_toBottomOf="@+id/tv_curr2"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border"
                android:padding="5dp"
                android:gravity="top"
                android:hint="2단계 상세설명을 입력해주세요."/>

            <EditText
                android:id="@+id/tv_curr3"
                android:layout_width="190dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@id/context_img"
                app:layout_constraintTop_toBottomOf="@+id/curr2_description"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/curr3_img"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="@id/product"
                app:layout_constraintTop_toBottomOf="@+id/curr2_description"
                android:layout_marginTop="8dp"
                android:text="사진첨부"
                android:gravity="center"
                android:background="@drawable/button"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/curr3_description"
                android:layout_width="280dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="@id/region"
                app:layout_constraintTop_toBottomOf="@+id/tv_curr3"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border"
                android:padding="5dp"
                android:gravity="top"
                android:hint="3단계 상세설명을 입력해주세요."/>

            <TextView
                android:id="@+id/tv_curr4"
                android:layout_width="190dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@id/context_img"
                app:layout_constraintTop_toBottomOf="@+id/curr3_description"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:text="4단계: 완성"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/curr4_img"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="@id/product"
                app:layout_constraintTop_toBottomOf="@+id/curr3_description"
                android:layout_marginTop="8dp"
                android:text="이미지 업로드"
                android:textSize="10sp"
                android:gravity="center"
                android:background="@drawable/button"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/address"
                app:layout_constraintBottom_toBottomOf="@id/address"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="주소"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="280dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@id/region"
                app:layout_constraintTop_toBottomOf="@+id/curr4_img"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tips"
                app:layout_constraintBottom_toBottomOf="@id/tips"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="유의사항"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/tips"
                android:layout_width="280dp"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="@id/region"
                app:layout_constraintTop_toBottomOf="@+id/address"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border"
                android:padding="5dp"/>
            
            <ImageButton
                android:id="@+id/btn_save"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_save"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tips"
                android:layout_marginTop="30dp"/>


            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_list"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_save"
                android:layout_marginTop="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>