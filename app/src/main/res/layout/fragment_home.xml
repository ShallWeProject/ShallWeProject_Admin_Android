<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".home.HomeFragment">

    <View
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:background="#FFF5F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/btn_product"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/btn_home_round"
        android:backgroundTint="#F8F8F8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/board" />
    <ImageView
        android:id="@+id/img_product"
        android:layout_width="41dp"
        android:layout_height="50dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/home_product"
        app:layout_constraintEnd_toEndOf="@+id/btn_product"
        app:layout_constraintStart_toStartOf="@+id/btn_product"
        app:layout_constraintTop_toTopOf="@+id/btn_product" />

    <TextView
        android:id="@+id/tx_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="상품 관리"
        android:textColor="#393939"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_product"
        app:layout_constraintStart_toStartOf="@+id/img_product"
        app:layout_constraintTop_toBottomOf="@+id/img_product" />
    <View
        android:id="@+id/btn_schedule"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/btn_home_round"
        android:backgroundTint="#F8F8F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/board" />

    <ImageView
        android:id="@+id/img_schedule"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/home_schedule"
        app:layout_constraintEnd_toEndOf="@+id/btn_schedule"
        app:layout_constraintStart_toStartOf="@+id/btn_schedule"
        app:layout_constraintTop_toTopOf="@+id/btn_schedule" />

    <TextView
        android:id="@+id/tx_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="일정 관리"
        android:textColor="#393939"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_schedule"
        app:layout_constraintStart_toStartOf="@+id/img_schedule"
        app:layout_constraintTop_toBottomOf="@+id/img_product" />

    <View
        android:id="@+id/btn_reservation"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/btn_home_round"
        android:backgroundTint="#F8F8F8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_product" />

    <ImageView
        android:id="@+id/img_reservation"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="29dp"
        android:src="@drawable/home_reservation"
        app:layout_constraintEnd_toEndOf="@+id/btn_reservation"
        app:layout_constraintStart_toStartOf="@+id/btn_reservation"
        app:layout_constraintTop_toTopOf="@+id/btn_reservation" />

    <TextView
        android:id="@+id/tx_reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="예약 관리"
        android:textColor="#393939"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_reservation"
        app:layout_constraintStart_toStartOf="@+id/img_reservation"
        app:layout_constraintTop_toBottomOf="@+id/img_reservation" />

    <TextView
        android:id="@+id/btn_logout"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="25dp"
        android:text="로그아웃"
        android:textStyle="bold"
        android:textColor="#D9D9D9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="25dp"
        android:text="회원 탈퇴"
        android:textColor="#D9D9D9"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:textColor="#333333"
        android:text="2023.07.16"
        app:layout_constraintEnd_toStartOf="@+id/btn_schedule"
        app:layout_constraintStart_toEndOf="@+id/btn_product"
        app:layout_constraintTop_toTopOf="@+id/board" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="14dp"
        android:text="예약 접수"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/total_reserv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="10"
        android:textColor="#E31B54"
        android:textSize="35sp"
        app:layout_constraintEnd_toStartOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="건"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/total_reserv_count"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/total_reserv_count" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="70dp"
        android:text="결제 확인"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/reserv_check_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="5"
        android:textColor="#E31B54"
        android:textSize="35sp"
        app:layout_constraintEnd_toStartOf="@+id/textView17"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="건"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/reserv_check_count"
        app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/reserv_check_count" />


</androidx.constraintlayout.widget.ConstraintLayout>