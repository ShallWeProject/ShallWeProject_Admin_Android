<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/white"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:cardCornerRadius="30dp">



        <androidx.constraintlayout.widget.ConstraintLayout

            android:backgroundTint="@color/white"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            >

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tvDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_margin="15dp"
                android:text="결제 확인"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:textStyle="bold"
                android:id="@+id/tvDialogName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김예린"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0dp"
                android:textColor="#E31B54"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDialogTitle" />
            <TextView
                android:textStyle="bold"
                android:id="@id/tvDialogMessage05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="외"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#E31B54"
                app:layout_constraintLeft_toRightOf="@id/tvDialogName"
                app:layout_constraintTop_toBottomOf="@id/tvDialogTitle" />


            <TextView
                android:id="@id/tvDialogPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textColor="#E31B54"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/tvDialogMessage05"
                app:layout_constraintTop_toBottomOf="@+id/tvDialogTitle" />

            <TextView
                android:textStyle="bold"
                android:id="@id/tvDialogMessaage04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명"
                android:textColor="#E31B54"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_marginLeft="1dp"
                app:layout_constraintLeft_toRightOf="@id/tvDialogPeople"
                app:layout_constraintTop_toBottomOf="@+id/tvDialogTitle"/>



            <TextView
                android:id="@+id/tvDialogMessage03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="44dp"
                android:textColor="#49454F"
                android:text="결제를 확인하셨습니까? "
                android:textSize="15dp"

                app:layout_constraintLeft_toLeftOf="@id/tvDialogTitle"
                app:layout_constraintTop_toBottomOf="@id/tvDialogPeople" />

            <Button
                android:id="@+id/btnDialogPositive"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_design"
                android:backgroundTint="#FFE4E8"
                android:text="예약확정"
                android:textColor="#E31B54"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnDialogNegative"
                app:layout_constraintTop_toBottomOf="@id/tvDialogMessage03" />

            <Button
                android:id="@+id/btnDialogNegative"
                android:layout_width="76dp"
                android:layout_height="40dp"

                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_design"
                android:text="취소"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDialogMessage03" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>